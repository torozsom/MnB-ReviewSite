<%- include('header') %>

<main class="add-container">
    <h2>Add a new item</h2>

    <form action="/add" method="POST" enctype="multipart/form-data">

        <div class="type-selection">
            <label><input type="radio" name="itemType" value="movie" checked> Movie</label>
            <label><input type="radio" name="itemType" value="book"> Book</label>
        </div>

        <label class="upload-label">
            Upload Cover Picture
            <input type="file" name="image" accept="image/*">
        </label>

        <input type="text" name="title" placeholder="Title" required>

        <input type="text" name="creator" placeholder="Director / Author" required>

        <input type="number" name="year" placeholder="Release Year" required>

        <textarea name="description" placeholder="Description" rows="4" required></textarea>

        <div class="button-group">
            <a href="/" class="cancel-btn">Cancel</a>
            <button type="submit" class="save-btn">Save</button>
        </div>
    </form>
</main>

<%- include('footer') %>
