<%- include('header') %>

<main class="add-container">
    <h2>Adding a New Item</h2>

    <form action="#" method="POST" enctype="multipart/form-data">

        <div class="type-selection">
            <label><input type="radio" name="itemType" value="book"> Book</label>
            <label><input type="radio" name="itemType" value="movie"> Movie</label>
        </div>

        <label class="upload-label">
            Upload Cover Picture
        </label>

        <input type="text" name="title" placeholder="Title" required>

        <input type="text" name="producer" placeholder="Producer / Author" required>

        <input type="number" name="year" placeholder="Release Year" min="1800" max="2099" required>

        <textarea name="description" placeholder="Description" rows="4" required></textarea>

        <div class="button-group">
            <button type="reset" class="cancel-btn"><a href="/">Cancel</a></button>
            <button type="submit" class="save-btn"><a href="/">Save</a></button>
        </div>
    </form>
</main>

<%- include('footer') %>
