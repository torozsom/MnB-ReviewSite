<%- include('header') %>

<main class="add-container">
    <h2>Adding a New Item</h2>

    <form action="/add" method="POST">

        <div class="type-selection">
            <label><input type="radio" name="itemType" value="book" checked> Book</label>
            <label><input type="radio" name="itemType" value="movie"> Movie</label>
        </div>

        <label class="upload-label">
            Upload Cover Picture
        </label>

        <input type="text" name="title" placeholder="Title" required>

        <input type="text" name="creator" placeholder="Producer / Author" required>

        <input type="number" name="year" placeholder="Release Year" required>

        <textarea name="description" placeholder="Description" rows="4" required></textarea>

        <div class="button-group">
            <a href="/" class="cancel-btn">Cancel</a>
            <button type="submit" class="save-btn">Save</button>
        </div>
    </form>
</main>

<%- include('footer') %>
