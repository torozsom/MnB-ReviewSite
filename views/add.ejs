<%- include('header') %>

<main class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="mb-0 fs-4">Add a new item</h2>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="POST" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label class="form-label">Item Type</label>
                            <div class="d-flex gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="itemType" id="movieType"
                                           value="movie" checked>
                                    <label class="form-check-label" for="movieType">
                                        <i class="bi bi-film me-1"></i> Movie
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="itemType" id="bookType"
                                           value="book">
                                    <label class="form-check-label" for="bookType">
                                        <i class="bi bi-book me-1"></i> Book
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label">Cover Picture</label>
                            <input class="form-control" type="file" id="image" name="image" accept="image/*">
                        </div>

                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="Enter title"
                                   required>
                        </div>

                        <div class="mb-3">
                            <label for="creator" class="form-label">Director / Author</label>
                            <input type="text" class="form-control" id="creator" name="creator"
                                   placeholder="Enter director or author" required>
                        </div>

                        <div class="mb-3">
                            <label for="year" class="form-label">Release Year</label>
                            <input type="number" class="form-control" id="year" name="year"
                                   placeholder="Enter release year" required>
                        </div>

                        <div class="mb-4">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="4"
                                      placeholder="Enter description" required></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/" class="btn btn-danger me-md-2">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('footer') %>
