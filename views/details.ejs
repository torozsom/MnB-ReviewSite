<%- include('header') %>

<main class="details-container">
    <div class="image-section">
        <img src="/hungergames_movie.jpg" alt="Hunger Games">
        <div class="rating">
            <span>★</span><span>★</span><span>★</span><span>★</span><span>☆</span>
        </div>
    </div>

    <div class="info-section">
        <h2>Hunger Games: The Mockingjay - Part 1</h2>
        <p class="description">
            Katniss Everdeen reluctantly becomes the symbol of a mass rebellion against the autocratic Capitol.
        </p>
        <div class="buttons">
            <button class="edit-btn"><a href="/edit/1">Edit</a></button>
            <button class="remove-btn">Remove</button>
        </div>
    </div>

    <div class="review-section">
        <h3>Reviews</h3>
        <textarea placeholder="Write a comment..."></textarea>
        <input type="text" placeholder="Username">
        <button class="back-btn"><a href="/">Back</a></button>
        <button class="comment-btn">Comment</button>
        <div class="comments">
            <p><strong>User1:</strong> Amazing movie, highly recommended!</p>
            <p><strong>User2:</strong> Loved the action scenes.</p>
        </div>
    </div>
</main>

<%- include('footer') %>
