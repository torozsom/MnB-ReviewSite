<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - M&B Reviews</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="<%= stylesheet %>">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body class="bg-light">
<% if (locals.successMessage) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= successMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<header class="bg-dark text-white py-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-4">
                <h1 class="mb-0">M&B Reviews</h1>
            </div>

            <% if (showNav) { %>
                <div class="col-md-8">
                    <nav class="navbar navbar-expand-lg navbar-dark">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link" href="/movies">Movies</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/books">Books</a>
                                </li>
                                <% if (locals.isAuthenticated) { %>
                                    <li class="nav-item">
                                        <a class="nav-link" href="/add">Add Item</a>
                                    </li>
                                <% } %>
                            </ul>

                            <form id="searchForm" action="" method="GET" class="d-flex me-2">
                                <input type="text" name="search" placeholder="Search..." class="form-control me-2">
                                <button type="submit" class="btn btn-outline-light"><i class="bi bi-search"></i>
                                </button>
                            </form>
                            <script>
                                // Set the form action based on the current URL
                                document.addEventListener('DOMContentLoaded', function () {
                                    const searchForm = document.getElementById('searchForm');
                                    const currentPath = window.location.pathname;

                                    if (currentPath === '/books')
                                        searchForm.action = '/books';
                                    else
                                        searchForm.action = '/movies';
                                });
                            </script>

                            <div class="navbar-nav">
                                <% if (locals.isAuthenticated) { %>
                                    <a class="nav-link" href="/logout">Log Out</a>
                                <% } else { %>
                                    <a class="nav-link" href="/login">Login</a>
                                    <a class="nav-link" href="/register">Register</a>
                                <% } %>
                            </div>
                        </div>
                    </nav>
                </div>
            <% } %>
        </div>
    </div>
</header>
